<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Compte.CompteDetailActivity">

    <EditText
            android:id="@+id/saisieNomCompte"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nom du compte"/>

    <EditText
            android:id="@+id/saisieSoldeCompte"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Solde du compte"
            android:inputType="numberDecimal|numberSigned"
            android:layout_below="@+id/saisieNomCompte"
    />

    <android.support.v7.widget.AppCompatCheckBox
            android:id="@+id/saisieIncludedInBalance"
            android:layout_width="267dp"
            android:layout_height="46dp"
            android:layout_below="@id/saisieSoldeCompte"
            android:text="Inclure le compte dans la balance"

    />

</RelativeLayout>